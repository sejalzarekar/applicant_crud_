<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%-include('cdn.ejs')%>
</head>
<body>
    <div class="btn-cont text-center mt-3">
        <a href="/"><button class="btn btn-dark fw-bold ">Back to Home Page</button></a>

    </div>
    <h1 class="text-center mt-2 fw-bold">All emp details</h1>
    <table class="table table-bordered mt-5">
        <thead>
            <th>Sr No</th>
            <th>Emp ID</th>
            <th>EMp Name</th>
            <th>Emp Email</th>
            <th>Emp Password</th>
            <th>Emp Role</th>
            <th>Action</th>

        </thead>
        <tbody>
            <% data.map((val,index)=>{ %>

                <tr>
                    <td><%= index+1 %></td>
                    <td><%= val.empId %></td>
                    <td><%= val.empName %></td>
                    <td><%= val.empEmail %></td>
                    <td><%= val.empPass %></td>
                    <td><%= val.empRole %></td>
                    <td><a href="/delete/<%= val.empId %>" onclick="return confirm('Are you sure you want to delete this record?')">
                        <i class="fa fa-trash fw-bold text-danger"></i>
                      </a><a href="/edit?id=<%-val.empId%>"><i class="fa fa-edit fw-bold text-success mx-3"></i></a></td>
                      
                </tr>

           <% }) %>
        </tbody>
    </table>
</body>
</html>