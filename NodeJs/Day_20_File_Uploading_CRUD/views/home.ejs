<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile Form</title>
  <%-include('cdn.ejs')%>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .profile-form {
      max-width: 800px;
      margin: auto;
      background-color: #fff;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .form-label {
      font-weight: 500;
    }
    .form-control-sm {
      max-width: 300px;
    }
    .btn-sm-custom {
      width: 150px;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Add Profile Details</h2>
    <div class="profile-form">

      <form action="/saveform" method="POST" enctype="multipart/form-data">

        <!-- Full Name - full width -->
        <div class="mb-3">
          <label for="fullname" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="fullname" name="fullname" required>
        </div>

        <!-- Avatar Upload - small width -->
        <div class="mb-4">
          <label for="file" class="form-label">Upload Profile Picture</label><br>
          <input type="file" class="form-control" id="file" name="file">
        </div>


        <!-- Submit Button - small and aligned right -->
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-sm btn-sm-custom">Save</button>
        </div>

      </form>

    </div>
  </div>

  
</body>
</html>
