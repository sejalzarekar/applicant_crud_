<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Slider Table</title>

  <%- include('cdn.ejs') %>
  <style>
    body {
      background-color: #f1f1f1;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .table-container {
      max-width: 95%;
      margin: 40px auto;
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .table thead {
      background-color: #343a40;
      color: #fff;
    }

    .table img {
      width: 80px;
      height: auto;
      border-radius: 8px;
    }

    .action-btns .btn {
      margin-right: 5px;
    }

    h2 {
      text-align: center;
      color: #343a40;
      margin-bottom: 30px;
      font-weight: bold;
    }
  </style>
</head>

<body>
  <div class="table-container">
    <h2>Carousel Slider List</h2>
    <div class="table-responsive">
      <table class="table table-hover table-bordered align-middle">
        <thead class="text-center">
          <tr>
            <th>Sr.No</th>
            <th>Slider ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.map((val, index) => { %>
            <tr>
              <td class="text-center"><%- index + 1 %></td>
              <td class="text-center"><%- val.slider_id %></td>
              <td><%- val.slider_title %></td>
              <td><%- val.slider_desc %></td>
              <td class="text-center">
                <% if (val.file) { %>
                  <img src="/uploads/<%- val.file %>" alt="Slider Image" />
                <% } else { %>
                  <span class="text-muted">No image</span>
                <% } %>
              </td>
              <td class="text-center action-btns">
                <button class="btn btn-sm btn-warning">Edit</button>
              </td>
              <td class="text-center action-btns">
                <a href="/delete-slider/<%- val.slider_id %>"><button class="btn btn-sm btn-danger">Delete</button></a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>

</html>
