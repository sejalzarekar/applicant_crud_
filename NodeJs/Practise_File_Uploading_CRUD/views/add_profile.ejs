<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile Form</title>
 <%- include('cdn.ejs') %>

  <style>
    body {
      background-color: #f8f9fa;
    }
    .profile-form {
      max-width: 800px;
      margin: auto;
      background-color: #fff;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .form-label {
      font-weight: 500;
    }
    .form-control-sm {
      max-width: 300px;
    }
    .btn-sm-custom {
      width: 150px;
    }
  </style>
</head>
<body>
    <div class="btn-class text-center mt-3">
<a href="userprofiles"><button class="btn btn-dark fw-bold">Show ALL Profiles</button></a>
  </div>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Add Profile Details</h2>
    <div class="profile-form">

      <form action="/saveform" method="post" enctype="multipart/form-data">

        <!-- Full Name - full width -->
        <div class="mb-3">
          <label for="fullname" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="fullname" name="fullname" required>
        </div>

        <div class="row">
          <!-- Role -->
          <div class="mb-3 col-md-6">
            <label for="role" class="form-label">Role / Job Title</label>
            <input type="text" class="form-control" id="role" name="role" >
          </div>

          <!-- Username -->
          <div class="mb-3 col-md-6">
            <label for="username" class="form-label">Username / Tagline</label>
            <input type="text" class="form-control" id="username" name="username" >
          </div>
        </div>

        <div class="row">
          <!-- Location -->
          <div class="mb-3 col-md-6">
            <label for="location" class="form-label">Location (City, Country)</label>
            <input type="text" class="form-control" id="location" name="location" >
          </div>

          <!-- Email -->
          <div class="mb-3 col-md-6">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" >
          </div>
        </div>

        <div class="row">
          <!-- Phone -->
          <div class="mb-3 col-md-6">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone" name="phone" >
          </div>

          <!-- Join Date -->
          <div class="mb-3 col-md-6">
            <label for="join_date" class="form-label">Member Since</label>
            <input type="date" class="form-control" id="join_date" name="join_date" >
          </div>
        </div>

         <!-- Avatar Upload - small width -->
        <div class="mb-4">
          <label for="avatar" class="form-label">Upload Profile Picture</label><br>
          <input type="file" class="form-control" id="file" name="file">
        </div>

        <!-- Bio (full width) -->
        <div class="mb-4">
          <label for="bio" class="form-label">Short Bio / About</label>
          <textarea class="form-control" id="bio" name="bio" rows="3" placeholder="Write a short description..."></textarea>
        </div>

        <!-- Submit Button - small and aligned right -->
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-sm btn-sm-custom">Save</button>
        </div>

      </form>

    </div>
  </div>

  
</body>
</html>
